<div align="center" class="center"> 

<% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Listing Matchdays</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Matches</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matchdays.each do |matchday| %>
      <tr>
        <td><%= matchday.id %></td>
        <td><%= matchday.matches.count %></td>
        <td><% if matchday.finished %>Finished<%elsif matchday.started %>Started<%else%>Created<%end%></td>
        <td><%= link_to 'Show', matchday %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Matchday', new_matchday_path %>
<%= link_to 'Back', controller: "main", action: "home" %>

</div>