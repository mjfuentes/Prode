<div align="center" class="center"> 

<div class="page-header">
  <%= link_to new_matchday_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Matchday
  <% end %>
  <%= link_to home_path, class: 'btn btn-default' do %>
   <span class="glyphicon glyphicon-arrow-left"></span>
    Back
  <% end %>
  <h1>Listing matches</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Number</th>
        <th>Matches</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matchdays.each do |matchday| %>
        <tr>
          <td><%= matchday.id %></td>
          <td><%= matchday.matches.count %></td>
          <td><% if matchday.finished %>Finished<%elsif matchday.started %>Started<%else%>Created<%end%></td>
          <td><%= link_to 'Show', matchday %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

</div>