<div align="center" class="center">

<% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Matchday <%= @matchday.id %></h1>

<table>
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Home score</th>
      <th>Away score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.home_team %></td>
        <td><%= match.away_team %></td>
        <td><% if match.finished %><%= match.home_score %><% else %> - <%end%></td>
        <td><% if match.finished %><%= match.away_score %><% else %> - <%end%></td>
        <% if !@matchday.finished & @matchday.started & (match.finished == false) %>
        <td><%= link_to 'Add result', edit_match_path(match) %></td>
        <% elsif !@matchday.started %>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !@matchday.started %>
<%= link_to 'New Match', controller:"matches", action:"new"%>
<%= link_to 'Start Matchday', controller:"matchdays", action:"start"%>
<% elsif !@matchday.finished %>
<%= link_to 'End Matchday', controller:"matchdays", action:"end"%>
<%end%>
<%= link_to 'Back', controller: "matchdays", action: "index" %>
</div>
