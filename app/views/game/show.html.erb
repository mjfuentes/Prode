<div align="center" class="center"> 

<div class="page-header">
  <%= link_to game_history_path, class: 'btn btn-default' do %>
   <span class="glyphicon glyphicon-arrow-left"></span>
    Volver
  <% end %>
  <h1>Partidos de la fecha</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Local</th>
        <th>Goles</th>
        <th>Tu pronostico</th>
        <th>Visitante</th>
        <th>Goles </th>
        <th>Tu pronostico</th>
        <th>Puntos</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item['match']['home_team'] %></td>
          <td><%= item['match']['home_score'] %></td>
          <td><%if item['guess']%><%= item['guess']['home_score'] %><%else%> - <%end%></td>
          <td><%= item['match']['away_team'] %></td>
          <td><%= item['match']['away_score'] %></td>
          <td><%if item['guess']%><%= item['guess']['away_score'] %><%else%> - <%end%></td>
          <td><%if item['guess']%><%= item['guess']['points'] %><%else%> - <%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

</div>