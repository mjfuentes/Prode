<div align="center" class="center">	
	<% if flash[:notice] %>
		<div id="notice"><%= flash[:notice] %></div>
	<% end %>

	<form id="registerForm" action="/players/new" method="post">
		<div>
			<label class="form-label">Full name:</label>
			<input class="form-input" name="name" type="text"/>
		</div>
		<div>
			<label class="form-label">Username:</label>
			<input class="form-input" name="username" type="text"/>
		</div>
		<div>
			<label class="form-label">Email:</label>
			<input class="form-input" name="email" type="text"/>
		</div>
		<div>
			<label class="form-label">Password:</label>
			<input class="form-input" name="password" type="password"/>
		</div>
		<input type="submit" class="button" value ="Register"/>
	</form>
	<%= link_to 'Back', controller: "main", action: "welcome" %>
</div>
