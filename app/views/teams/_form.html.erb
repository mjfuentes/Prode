<%= form_for(@team, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @team.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= I18n.t('activerecord.errors.template.header', :count => @team.errors.size, :model => @team.class.model_name.human) %>:</h4>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label t('views.match.home_team') %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t('views.teams.save') ,class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
