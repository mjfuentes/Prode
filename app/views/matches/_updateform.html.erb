<%= form_for(@match, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @match.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h4>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <div class="field">
    <%= f.label @match.home_team %><br>
    <%= f.text_field :home_score %>
  </div>
  <div class="field">
    <%= f.label @match.away_team %><br>
    <%= f.text_field :away_score %>
  </div>
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit t('views.matchday.add_result') %>
    </div>
    <%= f.hidden_field :matchday_id, :value => @matchday.id %>
  </div>
<% end %>
